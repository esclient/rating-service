<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude test files from certain checks -->
    <Match>
        <Class name="~.*Test.*"/>
        <Bug pattern="DM_NEXTINT_VIA_NEXTDOUBLE"/>
    </Match>
   
    <Match>
        <Class name="~.*Test.*"/>
        <Bug pattern="DMI_RANDOM_USED_ONLY_ONCE"/>
    </Match>
   
    <!-- Exclude generated code if any -->
    <Match>
        <Class name="~.*\.generated\..*"/>
    </Match>
   
    <!-- Exclude generated protobuf files -->
    <Match>
        <Package name="rating" />
    </Match>
   
    <!-- Exclude specific false positives common in Spring Boot apps -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP"/>
        <Method name="~get.*"/>
    </Match>
    <Match>
        <Bug pattern="EI_EXPOSE_REP2"/>
        <Method name="~set.*"/>
    </Match>
   
    <!-- Exclude EI_EXPOSE_REP2 for Spring dependency injection constructors -->
    <Match>
        <Class name="com.esclient.ratingservice.repository.RatingRepository" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
    <Match>
        <Class name="com.esclient.ratingservice.service.RatingService" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
   
    <!-- Exclude serialization warnings for DTOs/Entities -->
    <Match>
        <Class name="~.*\.(dto|entity|model)\..*"/>
        <Bug pattern="SE_NO_SERIALVERSIONID"/>
    </Match>
   
    <!-- Exclude utility class constructor warnings for Spring components -->
    <Match>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
        <Field name="~.*"/>
        <Class name="~.*\.(config|configuration)\..*"/>
    </Match>

    <!-- Exclude fields that could be local -->
    <Match>
        <Bug pattern="FCBL_FIELD_COULD_BE_LOCAL"/>
    </Match>
   
    <!-- Exclude constructor throw warnings -->
    <Match>
        <Bug pattern="CT_CONSTRUCTOR_THROW"/>
    </Match>
   
    <!-- Exclude needless boolean boxing -->
    <Match>
        <Bug pattern="NAB_NEEDLESS_BOOLEAN_CONSTANT_CONVERSION"/>
    </Match>

    <!-- Exclude exception softening warnings -->
    <Match>
        <Bug pattern="EXS_EXCEPTION_SOFTENING_NO_CONSTRAINTS"/>
    </Match>

</FindBugsFilter>